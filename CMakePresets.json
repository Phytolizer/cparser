{
    "version": 3,
    "configurePresets": [
        {
            "name": "dev-base",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "flags-unix",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_CXX_FLAGS": "-Wall -Wextra -Wpedantic"
            }
        },
        {
            "name": "dist-base",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "dist-ninja",
            "displayName": "Distribution (Ninja)",
            "binaryDir": "build/dist-ninja",
            "generator": "Ninja",
            "inherits": ["dist-base"]
        },
        {
            "name": "dist-vs22",
            "displayName": "Distribution (VS 2022)",
            "binaryDir": "build/dist-vs22",
            "generator": "Visual Studio 17 2022",
            "inherits": ["dist-base"]
        }
    ],
    "buildPresets": [
        {
            "name": "dist-ninja",
            "configurePreset": "dist-ninja"
        },
        {
            "name": "dist-vs22",
            "configurePreset": "dist-vs22"
        }
    ]
}
